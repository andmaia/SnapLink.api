@{
    ViewData["Title"] = "SnapLink - Compartilhe arquivos de forma rápida";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: #fff;
            padding: 60px 0 80px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            header h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            header p {
                font-size: 1.25rem;
                margin-top: 15px;
            }

        .feature-icon {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        footer {
            background-color: #212529;
            color: #bbb;
            padding: 20px 0;
            text-align: center;
            margin-top: 50px;
        }

            footer a {
                color: #fff;
                text-decoration: none;
                margin: 0 8px;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .carousel {
            background: #000;
        }

        .carousel-item {
            height: 420px;
        }

            .carousel-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: brightness(80%);
            }

        .carousel-caption {
            bottom: 40px;
        }

            .carousel-caption h5 {
                font-size: 1.8rem;
                font-weight: bold;
            }
    </style>
</head>
<body>

    <header>
        <h1>Envie arquivos em segundos 🚀</h1>
        <p>Simples, rápido, seguro e sem precisar criar conta.</p>
        <div class="mt-4">
            <button type="button" class="btn btn-light btn-lg px-4 fw-bold me-2" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                Criar pasta
            </button>
            <button type="button" class="btn btn-outline-light btn-lg px-4" data-bs-toggle="modal" data-bs-target="#accessFolderModal">
                Pasta
            </button>

        </div>
    </header> 

    <div class="modal fade" id="accessFolderModal" tabindex="-1" aria-labelledby="accessFolderLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="accessFolderLabel">Acessar Pasta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="FolderPageName" class="form-label">Nome da Pasta</label>
                        <input type="text" class="form-control" id="FolderPageName" placeholder="Digite o nome da pasta" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="accessFolderBtn">Acessar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="createFolderModal" tabindex="-1" aria-labelledby="createFolderLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-controller="Page" asp-action="CreatePage">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createFolderLabel">Criar Nova Pasta</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="FolderName" class="form-label">Título da Pasta</label>
                            <input type="text" class="form-control" id="FolderName" name="Name" required />
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" value="true" id="IsPrivate" name="IsPrivate">
                            <label class="form-check-label" for="IsPrivate">
                                Pasta Privada
                            </label>
                        </div>
                        <div class="mb-3 d-none" id="PasswordContainer">
                            <label for="AccessCode" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="AccessCode" name="AccessCode" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Criar Pasta</button>
                    </div>
                </form> 
            </div>
        </div>
    </div>


    <div id="snapCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#snapCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#snapCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#snapCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=1920&auto=format&fit=crop" alt="Upload Rápido" loading="lazy">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Compartilhe arquivos com um clique</h5>
                    <p>Gere links instantâneos e envie para quem quiser.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1556157382-97eda2d62296?q=80&w=1920&auto=format&fit=crop" alt="Segurança" loading="lazy">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Segurança em primeiro lugar</h5>
                    <p>Seus arquivos protegidos com criptografia avançada.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=1920&auto=format&fit=crop" alt="Pastas Compartilháveis" loading="lazy">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Organize e compartilhe suas pastas</h5>
                    <p>Gerencie seus arquivos com facilidade.</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#snapCarousel" data-bs-slide="prev" aria-label="Anterior">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#snapCarousel" data-bs-slide="next" aria-label="Próximo">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

    <section class="container text-center my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white">
                    <div class="feature-icon text-primary">⚡</div>
                    <h3 class="fw-bold">Rápido e fácil</h3>
                    <p>Selecione seus arquivos e gere um link compartilhável em segundos, sem complicações.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white">
                    <div class="feature-icon text-success">🔒</div>
                    <h3 class="fw-bold">Seguro</h3>
                    <p>Seus arquivos são armazenados com criptografia e você decide com quem compartilhar.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white">
                    <div class="feature-icon text-warning">📂</div>
                    <h3 class="fw-bold">Pastas compartilháveis</h3>
                    <p>Organize seus arquivos em pastas e compartilhe tudo de uma vez com quem quiser.</p>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <p>&copy; @DateTime.Now.Year SnapLink - Todos os direitos reservados</p>
        <div>
            <a href="#">Política de Privacidade</a> |
            <a href="#">Termos de Uso</a> |
            <a href="#">Contato</a>
        </div>
    </footer>

    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="errorModalLabel">Erro ao Criar Página</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p>@TempData["Message"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var message = "@TempData["Message"]";
            if (message && message.trim() !== "") {
                var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            }
        });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var el = document.getElementById('snapCarousel');
            if (el && window.bootstrap) {
                new bootstrap.Carousel(el, {
                    interval: 4000,   
                    ride: 'carousel', 
                    pause: false,  
                    touch: true,
                    wrap: true
                });
            }
        });

            document.getElementById('accessFolderBtn').addEventListener('click', function() {
            const folderName = document.getElementById('FolderPageName').value.trim();
            if(folderName) {
                // Redireciona para a página da pasta
                window.location.href = `/page/${encodeURIComponent(folderName)}`;
            } else {
                alert('Por favor, digite o nome da pasta.');
            }
        });

         const isPrivateCheckbox = document.getElementById('IsPrivate');
            const passwordContainer = document.getElementById('PasswordContainer');

            isPrivateCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    passwordContainer.classList.remove('d-none');
                } else {
                    passwordContainer.classList.add('d-none');
                }
            });
    </script>

</body>
</html>
